<h2>
  Edit Card {{ title }}
</h2>

<form action="/cards/edit" method="post">

  <input type="hidden" name="id" value="{{ id }}">

  <label> Number of card:
    <input type="text" name="numberCard" value="{{ numberCard }}" />
  </label>

  <label> Name of card:
    <input type="text" name="nameCard" value="{{ nameCard }}" />
  </label>

  <label> Categories:
    <input type="text" name="categories" value="{{ categories }}" />
  </label>

  <label> Description:
    <input type="text" name="description" value="{{ description }}" />
  </label>

  <button type="submit"> Edit </button>
</form>

<hr>

<a href="/cards/{{id}}">Cancel</a>